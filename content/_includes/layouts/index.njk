---
title: Home
tab_title: Home
# for path to static/css directory in _src directory
relative_path: ./
---
{% extends "./base.njk" %}
{%- block main -%}
<ul class="post-list text-center">
    {% for post in collections.posts | reverse %}
    <li><a href="{{ post.url }}">{{ post.data.title }},&nbsp{{ post.date | postDate }}
        [{% for tag in post.data.tags %}
            {% if not loop.last %}{{ tag }},{% else %}{{ tag }}{% endif %}
        {% endfor %}]
    {% endfor %}
    </a></li>
</ul>
{% endblock %}